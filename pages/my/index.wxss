/* pages/my/index.wxss */
page{
  width: 96%;
  background-color: #d2fcf1;
  margin: 0 auto;
}

.cu-card{
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: -10rpx;
}

.shadow{
  width: 100%;
}

.tologin{
  margin-left: 10rpx;
}

.clicktologin{
  font-size: 26rpx;
}

.loginbutton{
  float: right;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  margin-top: 25rpx;
}

.info_button{
  width: 200rpx; height: 60rpx;
  border:1rpx solid;
  border-radius: 20rpx;
  border-color: #4bc560;
  background-color: #4bc560;
  color: #fff;
  letter-spacing: 3rpx;
  font-size: 26rpx;

  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  flex-direction: column;
}

.cu-bar{
  margin-top: -10rpx;
}

.page {
  height: 100Vh;
  width: 100vw;
}

.page.show {
  overflow: hidden;
}

.switch-sex::after {
  content: "\e716";
}

.switch-sex::before {
  content: "\e7a9";
}

.switch-music::after {
  content: "\e66a";
}

.switch-music::before {
  content: "\e6db";
}

.bottom{
  width: 100%; height: 80rpx;
  background-color:white;
  font-size: 28rpx;
  color: #aaaaaa;
  display: flex;
  align-items: center;
  flex-direction: column;
}


